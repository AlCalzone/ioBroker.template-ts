{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noImplicitAny": false,
        "outDir": "build/",
        "removeComments": false,
        "sourceMap": true,
        "inlineSourceMap": false,
        "sourceRoot": "src/",
        "target": "es5",
        "lib": [ "es6" ],
        "watch": true
    }
}